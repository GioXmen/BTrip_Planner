<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_friend"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="6dp"
    android:layout_marginTop="12dp"
    android:layout_marginEnd="10dp"
    app:cardBackgroundColor="#F1F1F1"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <ImageView
        android:id="@+id/expenseImage"
        android:layout_width="match_parent"
        android:layout_marginEnd="100dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/image_thumbnail"
        android:scaleType="centerCrop" />

        <ImageButton
            android:id="@+id/delete"
            android:layout_width="167dp"
            android:layout_height="58dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="-77dp"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="15dp"
            android:layout_toEndOf="@+id/expenseImage"
            android:background="@drawable/red_trash_can"
            android:contentDescription="@string/delete_button" />

        <TextView
            android:id="@+id/image_data"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="330dp"
            android:layout_marginTop="120dp"
            android:lines="1"
            android:visibility="invisible"
            tools:text="data" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>